{
  "pages": [
    {
      "name": "list",
      "patterns": [
        "^https://tinhte\\.vn/?$"
      ],
      "example": "https://tinhte.vn",
      "parser": {
        "script": {
          "parse_promoted": [
            {
              "func": "filter",
              "params": {
                "func": "==",
                "params": [
                  {
                    "func": "get",
                    "params": "value._req.uri"
                  },
                  "threads/promoted"
                ]
              }
            },
            {
              "func": "map",
              "params": {
                "func": "get",
                "params": "value.threads"
              }
            },
            {
              "func": "flatten",
              "params": {}
            },
            {
              "func": "map",
              "params": {
                "func": "script",
                "params": {
                  "name": "convert_thread"
                }
              }
            }
          ],
          "convert_thread": [
            {
              "func": "pick",
              "params": {
                "fields": {
                  "title": [
                    {
                      "func": "get",
                      "params": "value.thread_title"
                    }
                  ],
                  "url": [
                    {
                      "func": "get",
                      "params": "value.links.permalink"
                    }
                  ],
                  "image": [
                    {
                      "func": "get",
                      "params": "value.thread_image.link"
                    }
                  ],
                  "created_at": [
                    {
                      "func": "get",
                      "params": "value.thread_create_date"
                    },
                    {
                      "func": "date1000",
                      "params": {}
                    }
                  ],
                  "summary": [
                    {
                      "func": "get",
                      "params": "value.first_post.post_body_plain_text"
                    },
                    {
                      "func": "split",
                      "params": {
                        "glue": "\\n"
                      }
                    },
                    {
                      "func": "first",
                      "params": ")"
                    }
                  ]
                }
              }
            }
          ]
        },
        "transforms": [
          {
            "func": "nextjs_data",
            "params": {}
          },
          {
            "func": "get",
            "params": "value.props.pageProps.apiData.jobs"
          },
          {
            "func": "values",
            "params": ")"
          },
          {
            "func": "script",
            "params": {
              "name": "parse_promoted"
            }
          },
          {
            "func": "uniq_by_field",
            "params": {
              "field": "url"
            }
          }
        ]
      }
    },
    {
      "name": "view",
      "patterns": [
        "^https://tinhte\\.vn/thread/.+\\.\\d+/?$"
      ],
      "example": "https://tinhte.vn/thread/tren-tay-rambler-14-oz-mau-nordic-blue-ly-giu-nhiet-ban-chay-nhi-cua-yeti.3669956/",
      "parser": {
        "script": {
          "convert_thread": [
            {
              "func": "pick",
              "params": {
                "fields": {
                  "title": [
                    {
                      "func": "get",
                      "params": "value.thread_title"
                    }
                  ],
                  "url": [
                    {
                      "func": "get",
                      "params": "value.links.permalink"
                    }
                  ],
                  "image": [
                    {
                      "func": "get",
                      "params": "value.thread_image.link"
                    }
                  ],
                  "content": [
                    {
                      "func": "get",
                      "params": "value.posts[0].post_body_html"
                    },
                    {
                      "func": "html_safe",
                      "params": ")"
                    }
                  ],
                  "created_at": [
                    {
                      "func": "get",
                      "params": "value.thread_create_date"
                    },
                    {
                      "func": "date1000",
                      "params": {}
                    }
                  ],
                  "author": [
                    {
                      "func": "pick",
                      "params": {
                        "fields": {
                          "name": [
                            {
                              "func": "get",
                              "params": "value.creator_username"
                            }
                          ],
                          "avatar": [
                            {
                              "func": "get",
                              "params": "value.links.first_poster_avatar"
                            }
                          ]
                        }
                      }
                    }
                  ],
                  "comments": [
                    {
                      "func": "get",
                      "params": "value.posts"
                    },
                    {
                      "func": "slice",
                      "params": {
                        "start": "1"
                      }
                    },
                    {
                      "func": "map",
                      "params": {
                        "func": "script",
                        "params": {
                          "name": "post_to_comment"
                        }
                      }
                    }
                  ]
                }
              }
            }
          ],
          "post_to_comment": [
            {
              "func": "pick",
              "params": {
                "fields": {
                  "content": [
                    {
                      "func": "get",
                      "params": "value.post_body_html"
                    }
                  ],
                  "author": [
                    {
                      "func": "pick",
                      "params": {
                        "fields": {
                          "name": [
                            {
                              "func": "get",
                              "params": "value.poster_username"
                            }
                          ],
                          "avatar": [
                            {
                              "func": "get",
                              "params": "value.links.poster_avatar"
                            }
                          ]
                        }
                      }
                    }
                  ]
                }
              }
            }
          ]
        },
        "transforms": [
          {
            "func": "nextjs_data",
            "params": {}
          },
          {
            "func": "get",
            "params": "value.props.pageProps.apiData.jobs"
          },
          {
            "func": "values",
            "params": ")"
          },
          {
            "func": "filter",
            "params": {
              "func": "==",
              "params": [
                {
                  "func": "get",
                  "params": "value._req.uri"
                },
                "posts"
              ]
            }
          },
          {
            "func": "get",
            "params": "value[0].thread"
          },
          {
            "func": "script",
            "params": {
              "name": "convert_thread"
            }
          }
        ]
      }
    }
  ]
}